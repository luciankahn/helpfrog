<section class="results" id="results-page">
  <div class="results__title">
    <h2>Resources for <% @filter_categories.each do |category| %> <%= category %> and <% end %> near <%= @address %></h2>
  </div>
  <div class="results__map" id="map-canvas"></div>
  <div class="results__list">
    <h3>Nearest Places</h3>
    <ol>
      <% @places.each do |place| %>
        <li>
          <%= link_to place.name, place_path(place) %>
          <p><%= place.address %></p>
          <a href="tel:<%= place.phone_number %>"><%= place.phone_number %></a>
          <p>Category: <% place.categories.each do |cat| %>
              <%= link_to cat.name, category_path(cat) %>
            <% end %></p></li>
      <% end %>
    </ol>
  </div>
</section>
