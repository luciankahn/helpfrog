<%= form_tag("/results", method: "get") do %>
  <p><%= label_tag "Starting Address or Intersection:" %></p>
  <p><%= text_field_tag :address, '123 Main Street, New York, New York ' %></p>
  <p><%= label_tag "Please select 1 or more categories:" %></p>
  <% Category.all.each do |cat| %>
    <p><input class="category-checkbox" id="cat_<%= cat.id %>" type="checkbox" name="filter[]" value="<%= cat.name %>"> <%= cat.name %></p>
  <% end %>
  <%= submit_tag "Search", id: "search-button" %>
<% end %>
