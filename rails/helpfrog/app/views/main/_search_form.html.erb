<%= form_tag("/results", method: "get") do %>
  <p><%= label_tag 'address', 'Starting Address or Intersection', class: 'form__text-field__label'  %><%= text_field_tag :address, nil, placeholder: "14th and 3rd, New York, New York" %></p>
  <p><%= label_tag "Please select 1 or more categories:" %></p>
  <% Category.all.each do |cat| %>
    <p class="form__line"><input class="form__checkbox graphic --image" id="cat_<%= cat.id %>" type="checkbox" name="filter[]" value="<%= cat.name %>"></input><label class="form__label" for="cat_<%= cat.id %>"><%= cat.name %></label></p>
  <% end %>
  <%= submit_tag "Search", id: "search-button" %>
<% end %>
